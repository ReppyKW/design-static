<!DOCTYPE html>
<html>
  <head>
    <!-- @import "/components/head.kit" -->
  </head>
  <body>
    <!-- @import "/components/header.kit" -->
    <section>
      <h4>Browse Agents</h4>
      <p>Find real estate professionals that have something in common with you.</p>
      <ul class="search-option-categories">
        <li class="category root">
          <button class="search-option active">Sports</button>
          <button class="search-option"       >Dining</button>
          <button class="search-option active">Travel</button>
        </li>
        <li class="category">
          <span>sports:</span>
          <button class="search-option">Baseball</button>
          <button class="search-option">Basketball</button>
        </li>
        <li class="category">
          <span>travel:</span>
          <button class="search-option">Europe</button>
          <button class="search-option">Tropical</button>
        </li>
      </ul>
    </section>

    <section class="more-options">
      <h5><img src="img/down-small.svg" />More Options</h5>
      <form>
        <div class="form-section">
          <div class="form-param">
            <label for="search-name-input">Name</label>
            <input id="search-name-input" type="text" placeholder="Look for someone specific" />
          </div>
        </div>

        <div class="form-section">
          <div class="form-param">
            <label for="search-language-input">Language</label>
            <select id="search-language-input">
              <option val="fr">French</option>
              <option val="es">Spanish</option>
              <option val="de">German</option>
            </select>
          </div>

          <div class="form-param">
            <label for="search-location-input">Location</label>
            <select id="search-location-input">
              <option val="waterloo">Waterloo</option>
              <option val="kitchener">Kitchener</option>
              <option val="toronto">Toronto</option>
            </select>
          </div>

          <div class="form-param">
            <label for="search-specialty-input">Specialty</label>
            <select id="search-specialty-input">
              <option val="foreclosure">Foreclosure</option>
              <option val="assisted-living">Assisted Living</option>
            </select>
          </div>

          <div class="form-param">
            <label for="search-experience-input">Experience</label>
            <select id="search-experience-input">
              <option val="5+">5+ years</option>
              <option val="10+">10+ years</option>
              <option val="15+">15+ years</option>
              <option val="20+">20+ years</option>
            </select>
          </div>
        </div>
      </form>
    </section>

    <section class="search-results">
      <ul>
        <li class="search-result">
          <a href="profile.html" class="search-result-hero" style="background-image:url(img/dynamic/agent-1/profile-pic.jpg);">
            <button>&#10006;</button>
            <div class="desaturated" style="background-image:url(img/dynamic/agent-1/profile-pic.jpg);"></div>
          </a>
          <div class="user-details">
            <a href="profile.html">
              <h5>Carla Pilkington</h5>
              <span class="company">Royal Lepage</span>
              <span class="designation">Broker of Record</span>
            </a>
            <footer>
              <!-- @import "/components/favourite-button.kit" -->
            </footer>
          </div>
        </li>
      </ul>
    </section>
    <!-- @import "/components/favourites.kit" -->
    <!-- @import "/components/footer.kit" -->
  </body>
</html>